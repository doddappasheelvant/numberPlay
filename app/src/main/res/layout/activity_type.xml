<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_gravity="center"
                android:text="Select Game"
                android:textColor="#9C27B0"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/opTypeButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton_purple"
                android:text=" num game1 "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton_red"
                android:text=" num game 2 "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/mybutton_yellow"
                android:text=" num game 3 "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton_green"
                android:text=" num game 4 "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>